<article class="container mt-4 box">
  <h2 class="title">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input name="post-title" id="post-title" class="input" type="text" value="{{post.title}}">
      </div>
    </div>
    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea name="post-content" id="post-content" class="textarea" value="{{post.post_content}}"></textarea>
      </div>
    </div>
    <button class="button is-info" type="submit">Save Post</button>
    <button type="button" class="button is-info delete-post-btn">Delete Post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>