<section class="container">
  <div class="box m-2">
    <div class="field new-post-form">
      <h1 class="title">Create New Post</h1>
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input name="post-title" id="post-title" class="input" type="text" placeholder="e.g. Amazing Blog Post">
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea name="post-content" id="post-content" class="textarea" placeholder="e.g. Hello world"></textarea>
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <button type="submit" class="button is-info">Create</button>
        </div>
      </div>
    </div>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>